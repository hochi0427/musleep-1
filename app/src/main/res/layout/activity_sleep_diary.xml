<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".sleep_diary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:format12Hour="yyyy/MM/dd EEEE"
            android:gravity="center_vertical"
            android:textColor="#968C8C"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/data_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_baseline_today_24"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="900dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#B3F0E5DE"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:gravity="center">
    <LinearLayout
        android:layout_width="850dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:ignore="MissingConstraints">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CFB194"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="日期"
                    android:textAlignment="center"
                    android:textColor="#A86959"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_brown2"
                    android:padding="10sp"
                    android:text="是否有小睡"
                    android:textAlignment="center"
                    android:textColor="#A86959"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_brown2"
                    android:padding="10sp"
                    android:text="是否有喝咖啡"
                    android:textAlignment="center"
                    android:textColor="#A86959"
                    android:textSize="16sp" />

            </TableRow>
        </TableLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diary_list"
            android:layout_width="700dp"
            android:layout_height="450dp"
            android:orientation="horizontal" />

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>